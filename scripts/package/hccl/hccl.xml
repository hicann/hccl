<?xml version="1.0" encoding="UTF-8"?>
<config name="hccl" copy_type="delivery" src_path="lib/" dst_path="hccl" install_type="all" install_mod="550" install_own="$username:$usergroup">
    <package_info>
        <product_name>cann</product_name>
        <func_name>hccl</func_name>
        <suffix>run</suffix>
        <install_script>share/info/hccl/script/install.sh</install_script>
        <help>share/info/hccl/script/help.info</help>
        <version>package/hccl/version.xml</version>
        <parallel>true</parallel>
        <check_features>true</check_features>
    </package_info>
    <generate_info value="hccl_version.h" dst_path="share/info/hccl" install_path="$(TARGET_ENV)/include/version" install_mod="440" install_type="devel" generator="version_header">
       <HCCL_VERSION>$(ASCEND_VER)</HCCL_VERSION>
       <HCCL_TIMESTAMP>$(TIMESTAMP_NO)</HCCL_TIMESTAMP>
    </generate_info>
    <generate_info value="scene.info" dst_path="share/info/hccl" install_path="share/info/hccl" install_mod="440">
        <os>$(OS_NAME)</os>
        <os_version>$(OS_VER)</os_version>
        <arch>$(ARCH)</arch>
    </generate_info>
    <file_info value="hccl_script" copy_type="source" src_path="" dst_path="share/info/hccl" install_path="share/info/hccl">
        <file value="script" entity="true"/>
        <file value="version.info" dst_path="share/info/hccl" install_path="share/info/hccl"/>
    </file_info>
    <block_info dependtree="false" dst_path="hccl" block_conf_path="ascend">
        <block name="EngineeringCommon"/>
        <block name="EngineeringFiles"/>
        <block name="HcclLib"/>
    </block_info>
    <dir_info value="hccl" install_path="hccl" install_type="all">
        <path value="share" install_mod="750"/>
        <path value="share/info" install_mod="750"/>
        <path value="share/info/hccl" install_mod="750"/>
        <path value="share/info/hccl/script" install_mod="550"/>
    </dir_info>
</config>
